<main>
    <h1>{{prodcut.name}}</h1>
    <img class="cube" src="{{product.imageUrl}}">
    <div class="details">
        <p><span>Description:</span>{{product.description}}</p>
        <p><span>Difficulty level:</span> {{product.difficultyLevel}}</p>

        {{#if isAuthticated}}
        <a class="btn" href="http://localhost:5000/{{product._id}}/attach">Attach</a>
        <a class="btn" href="http://localhost:5000/{{product._id}}/edit">Edit</a>
        <a class="btn" href="http://localhost:5000/{{product._id}}/delete">Delete</a>
        {{else}}
        <a class="btn" href="/">Back</a>
        {{/if}}
        
    </div>
    <h2>Accessories</h2>
    <div class="accessories">
        {{#each acessories}}
        {{>acessories}}
        {{else}}
        <h4 class='italic'>This cube has no acessories yet...</h4>
        {{/each}}
    </div>
</main>